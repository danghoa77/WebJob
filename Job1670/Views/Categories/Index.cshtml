@model IEnumerable<Job1670.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Alert" />
<h1>List Categories</h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Employer"))
    {
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>    
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if(User.IsInRole("Admin")){
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    } 
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    } 
                   
                </td>
            </tr>
        }
    </tbody>
</table>
