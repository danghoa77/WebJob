@model IEnumerable<Job1670.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Listing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobSeeker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverLetter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Listing.EmployerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobSeeker.JobSeekerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobApplicationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobApplicationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobApplicationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
