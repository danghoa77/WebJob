@model IEnumerable<Job1670.Models.JobSeeker>
@using System.IO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Information</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.CV)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
              @*   <td>
                    @item.CV.Substring(item.CV.LastIndexOf("\\") + 1)
                </td> *@


                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.JobSeekerId">Edit</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.JobSeekerId">Details</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.JobSeekerId"> Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
